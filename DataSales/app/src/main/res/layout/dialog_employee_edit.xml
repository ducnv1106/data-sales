<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.vinatti.datasales.viewmodel.EmployeeEditViewModel" />
        <variable
            name="managerStaffViewModel"
            type="com.vinatti.datasales.ui.fragment.personal.manager_staff.ManagerStaffViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#F8F4F4"
        android:id="@+id/rootView"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/str_title_dialog_employee_edit"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textAllCaps="false" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:background="@color/white"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_header">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/edt_name"
                app:layout_constraintTop_toTopOf="@id/edt_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:background="@null"
                android:maxLines="1"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="Họ và tên"
                android:text="@={viewModel.contentFullName}"
                android:singleLine="true"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/gl3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewLine1"
                app:layout_constraintTop_toBottomOf="@id/edt_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/grey_300"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/edt_phone"
                app:layout_constraintTop_toTopOf="@id/edt_phone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:maxLines="1"
                android:inputType="number"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@color/grey_300"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:hint="Số điện thoại"
                android:text="@={viewModel.contentPhone}"
                android:layout_marginTop="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/gl3"
                app:layout_constraintTop_toBottomOf="@id/viewLine1" />

            <View
                android:id="@+id/viewLine2"
                app:layout_constraintTop_toBottomOf="@id/edt_phone"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/grey_300"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quyền"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_role"
                app:layout_constraintTop_toTopOf="@id/tv_role" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_role"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:hint="Chọn"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@{viewModel.contentRole}"
                android:singleLine="true"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/gl3"
                app:layout_constraintTop_toBottomOf="@id/viewLine2" />

            <androidx.appcompat.widget.AppCompatImageView
                app:layout_constraintTop_toTopOf="@id/tv_role"
                app:layout_constraintBottom_toBottomOf="@id/tv_role"
                app:layout_constraintEnd_toEndOf="parent"
                android:tint="@color/grey_300"
                android:src="@drawable/ic_arrow_right"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>

            <View
                android:id="@+id/viewLine3"
                app:layout_constraintTop_toBottomOf="@id/tv_role"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/grey_300"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_lock"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@id/gl3"
                app:layout_constraintTop_toBottomOf="@id/viewLine3"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_tick"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:tint="@color/colorPrimary"
                    app:setImageLock="@{viewModel.isLock}"
                    android:background="@drawable/bg_circle_tick"
                    app:layout_constraintBottom_toBottomOf="@id/tv_lock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_lock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center|start"
                    android:text="Khóa"
                    android:textColor="@color/colorBlack3"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_tick" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_get_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@color/colorPrimary"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/layout_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@color/colorPrimary"
            android:text="Cập nhật"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>